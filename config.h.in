#ifndef RGBD360_CONFIG_H
#define RGBD360_CONFIG_H


/** Use optimized functions with the SSE4 machine instructions set */
#define SSE2    ${CMAKE_HAS_SSE2}     // This value can be set to 0 from CMake with DISABLE_SSE2
#define SSE3    ${CMAKE_HAS_SSE3}     // This value can be set to 0 from CMake with DISABLE_SSE3
#define SSE4_1  ${CMAKE_HAS_SSE4_1}   // This value can be set to 0 from CMake with DISABLE_SSE4_1
#define SSE4_2  ${CMAKE_HAS_SSE4_2}   // This value can be set to 0 from CMake with DISABLE_SSE4_2
#define SSE4_A  ${CMAKE_HAS_SSE4_A}   // This value can be set to 0 from CMake with DISABLE_SSE4_A
#define AVX     ${CMAKE_HAS_AVX}      // This value can be set to 0 from CMake with DISABLE_SSE4_A

#define TEST_SIMD 	${CMAKE_TEST_SIMD}		// Enable/disable SIMD tests (SSE, AVX) 
#define ENABLE_OPENMP 	${CMAKE_ENABLE_OPENMP}		// Enable/disable OpenMP
#define PRINT_PROFILING ${CMAKE_PRINT_PROFILING}	// Enable/disable Profiling

#endif



