IF(BUILD_GRABBER)

	set(EXECUTABLE_OUTPUT_PATH ${EXECUTABLE_DIR} CACHE PATH "Build directory" FORCE)

	# Declare the target (an executable)
	ADD_EXECUTABLE(RGBD360_Grabber RGBD360_Grabber.cpp
						../third_party/discrete_depth_distortion_model.cpp
						../third_party/include/clams/discrete_depth_distortion_model.h
	 					../include/CloudGrabber.h
						../include/Miscellaneous.h
						../include/Calib360.h
						../include/Frame360.h
	)

	TARGET_LINK_LIBRARIES(RGBD360_Grabber
						${MRPT_LIBS}
						${OpenCV_LIBS}
						${PCL_LIBRARIES}
						${Boost_SERIALIZATION_LIBRARY}
						libOpenNI2.so 
						libOniFile.so 
						libPS1080.so 
					   )

ENDIF(BUILD_GRABBER)
